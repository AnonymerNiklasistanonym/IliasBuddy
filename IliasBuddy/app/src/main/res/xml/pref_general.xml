<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="true"
        android:key="enable_auto_update_check"
        android:summary="@string/settings_activity_pref_general_auto_update_check_description"
        android:title="@string/settings_activity_pref_general_auto_update_check" />
    <ListPreference
        android:defaultValue="2500"
        android:entries="@array/settings_activity_pref_general_retry_timeout_rss_feed_titles"
        android:entryValues="@array/settings_activity_pref_general_retry_timeout_rss_feed_values"
        android:key="retry_timeout_rss_feed"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:summary="@string/settings_activity_pref_general_retry_timeout_rss_feed_description"
        android:title="@string/settings_activity_pref_general_retry_timeout_rss_feed" />
    <SwitchPreference
        android:defaultValue="false"
        android:key="enable_campus_shortcut"
        android:summary="@string/settings_activity_pref_general_display_campus_shortcut_description"
        android:title="@string/settings_activity_pref_general_display_campus_shortcut" />
    <SwitchPreference
        android:defaultValue="true"
        android:key="enable_setup_shortcut"
        android:summary="@string/settings_activity_pref_general_display_setup_shortcut_description"
        android:title="@string/settings_activity_pref_general_display_setup_shortcut" />
    <SwitchPreference
        android:defaultValue="false"
        android:key="enable_dev_shortcut"
        android:summary="@string/settings_activity_pref_general_display_dev_shortcut_description"
        android:title="@string/settings_activity_pref_general_display_dev_shortcut" />

</PreferenceScreen>
